.PHONY: $(MPICUDA_MOD_CLEAN)

$(MPICUDA_MOD_PTARGET) : $(MPICUDA_MOD_POBJ)
	$(NVCC_LD) $(LD_PFLAGS) $(MPICUDA_MOD_NVCCFLAGS) $(MPICUDA_MOD_LDPFLAGS) $^ -o $@ $(LD_SFLAGS) $(MPICUDA_MOD_LDSFLAGS)
	@printf "\n***** MPICUDA modules built successfully *****\n\n"

$(MPICUDA_DIR)/obj/%.o : $(MPICUDA_DIR)/%.cpp
	$(CPP) $(C_COMMON_FLAGS) $(C_WARNING_FLAGS) $(C_SHARED_FLAGS) $(C_DEP_FLAGS) $(C_DEBUG_FLAGS) $(MPICUDA_MOD_CINC)  $< -o $@

$(MPICUDA_DIR)/obj/%.o : $(MPICUDA_DIR)/%.cu
	$(NVCC) $(C_COMMON_FLAGS) -Xcompiler="$(C_WARNING_FLAGS) $(C_SHARED_FLAGS)" $(MPICUDA_MOD_NVCCFLAGS) $(MPICUDA_MOD_CINC) $< -o $@

$(MPICUDA_DIR)/obj/%.o : $(ROOT_DIR)/%.cpp
	$(CPP) $(C_COMMON_FLAGS) $(C_WARNING_FLAGS) $(C_SHARED_FLAGS) $(C_DEP_FLAGS) $(C_DEBUG_FLAGS) $(MPICUDA_MOD_CINC) $< -o $@

include $(wildcard $(MPICUDA_DIR)/obj/*.d)

$(MPICUDA_MOD_CLEAN) :
	$(RM) $(RM_FLAGS) $(MPICUDA_MOD_POBJ) 
	$(RM) $(RM_FLAGS) $(MPICUDA_MOD_PTARGET)
	$(RM) $(RM_FLAGS) $(MPICUDA_DIR)/obj/*.d
