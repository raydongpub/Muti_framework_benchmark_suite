$(MATRIXDATA_PTARGET): $(MATRIXDATA_POBJ)
	$(CPP) $(LD_PFLAGS) $^ -o $@ $(LD_SFLAGS)

$(SHOWPAR_PTARGET): $(SHOWPAR_POBJ)
	$(CPP) $(LD_PFLAGS) $^ -o $@ $(LD_SFLAGS)

$(ROOT_DIR)/obj/%.o: $(ROOT_DIR)/%.cpp
	$(CPP) $(C_COMMON_FLAGS) $(C_WARNNING_FLAGS) $(C_SHARED_FLAGS) $(C_DEP_FLAGS) $(C_DEBUG_FLAGS) $< -o $@

.PHONY: $(COMMON_CLEAN)

$(COMMON_CLEAN):
	$(RM) $(RM_FLAGS) $(MATRIXDATA_PTARGET)
	$(RM) $(RM_FLAGS) $(SHOWPAR_PTARGET)
	$(RM) $(RM_FLAGS) $(SHOWPAR_POBJ)
	$(RM) $(RM_FLAGS) $(MATRIXDATA_POBJ)
	$(RM) $(RM_FLAGS) $(ROOT_DIR)/obj/*.d
